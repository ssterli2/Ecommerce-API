<html>
    <head>
       <title>Login</title>
    </head>
    <body>
      <h3>Login</h3>
      <p>@ViewBag.message</p>
        <form action="login" method="post">
            Email: <input type='text' name='email'>
            Password: <input type='password' name='password'>
            <button type="submit">Login</button>
        </form>
        <a href='@Url.Action("Register", "Account")'>Don't have an account? Register</a>
    </body>
</html>